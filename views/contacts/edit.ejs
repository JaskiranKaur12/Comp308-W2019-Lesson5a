<%include ../partials/header.ejs %>

<!--Content for the Add Page-->
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1><%=title%></h1>
            <form action="" class="form" method="POST">
                <div class="form-group">
                    <label for="ThingTextField">
                        Favourite Thing
                    </label>
                    <input type="text" class="form-control" 
                    id="ThingsTextField" 
                   
                    name="favouriteThing"
                    value="<%=contact.name%>"
                    required>
                </div>
                <div class="form-group">
                        <label for="ValueTextField">
                            Favourite Thing names
                        </label>
                        <input type="text" class="form-control" 
                        id="ValueTextField" 
                        placeholder="Enter the name of favourite things"
                        name="favouritevalue"
                        value="<%=contact.description%>"
                        required>
                    </div>
                    <button type="submit" class="btn btn-primary"><i class="fa fa-edit"> Submit</i></button>
                    <a href="/contact-list" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            </form>
        </div>
    </div>
</div>



